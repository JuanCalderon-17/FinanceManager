@page
@model FinanceManager.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_PublicLayout";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 mx-auto">
        <section>
            <form id="account" method="post">
                <h2>Usa una cuenta local para iniciar sesión.</h2>
                <hr />
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Username" class="form-label">Usuario</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                </div>

                <div class="mt-3">
                    <p>¿No tienes una cuenta? <a asp-page="./Register">Regístrate</a></p>
                </div>
            </form>
        </section>
    </div>
</div>
